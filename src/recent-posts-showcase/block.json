{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "create-block/recent-posts-showcase",
    "version": "0.1.0",
    "title": "Recent Post Showcase",
    "category": "widgets",
    "icon": "smiley",
    "description": "A block to showcase recent posts with various display options.",
    "example": {},
    "supports": {
        "html": false,
        "color": {
            "text": true,
            "background": true
        }
    },
    "textdomain": "recent-posts-showcase",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js",
    "render": "file:../render.php",
    "attributes": {
        "postType": {
            "type": "string",
            "default": "post"
        },
        "taxonomy": {
            "type": "string",
            "default": "category"
        },
        "terms": {
            "type": "array",
            "default": []
        },
        "postsToShow": {
            "type": "number",
            "default": 4
        },
        "layout": {
            "type": "string",
            "default": "grid"
        },
        "displayImage": {
            "type": "boolean",
            "default": true
        },
        "displayExcerpt": {
            "type": "boolean",
            "default": true
        },
        "displayAuthor": {
            "type": "boolean",
            "default": true
        },
        "displayDate": {
            "type": "boolean",
            "default": true
        },
        "enableLoadMore": {
            "type": "boolean",
            "default": false
        }
    }
}